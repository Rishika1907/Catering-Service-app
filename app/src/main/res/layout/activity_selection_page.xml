<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionPage">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/selectionicon"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:paddingLeft="109dp"
        android:paddingTop="100dp"
        />
    <Button
        android:id="@+id/cRegistered"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="Register as Caterer "
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp"
        android:textSize="20sp"
        android:fontFamily="cursive"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:stateListAnimator="@null"
        android:background="@drawable/selectiondesign"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/cRegisterP"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="Register as Customer "
        android:layout_marginTop="310dp"
        android:layout_marginLeft="100dp"
        android:textSize="20sp"
        android:fontFamily="cursive"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:stateListAnimator="@null"
        android:background="@drawable/selectiondesign"
        android:textStyle="bold"
        />

</RelativeLayout>